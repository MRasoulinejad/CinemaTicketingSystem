@{
    ViewData["Title"] = "Contact Us";
}

@model ContactFormVM

<div class="container my-5">
    <!-- Page Header -->
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h1 class="display-4">@ViewData["Title"]</h1>
            <hr class="w-25 mx-auto">
        </div>
    </div>

    <!-- Contact Form Card -->
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Get in Touch</h3>
                </div>

                <div class="card-body">
                    <form asp-action="Contact" method="post">

                        @{
                            if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
                            }
                            if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
                            }
                        }


                        <div class="mb-3">
                            <label for="Name" class="form-label">Name</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Your Name" required>
                        </div>
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" class="form-control" asp-for="Email" placeholder="Your Email" required>
                        </div>
                        <div class="mb-3">
                            <label for="Subject" class="form-label">Subject</label>
                            <input type="text" class="form-control" asp-for="Subject" placeholder="Subject" required>
                        </div>
                        <div class="mb-3">
                            <label for="Message" class="form-label">Message</label>
                            <textarea class="form-control" asp-for="Message" rows="5" placeholder="Your Message" required></textarea>
                        </div>
                        <!-- Google reCAPTCHA -->
                        <div class="mb-3 text-center">
                            <div class="g-recaptcha" data-sitekey="@ViewData["SiteKey"]"></div>
                            <!-- Hidden Field for reCAPTCHA Token -->
                            <input type="hidden" id="g-recaptcha-response">
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Google reCAPTCHA Script -->
<script src="https://www.google.com/recaptcha/api.js" async defer></script>