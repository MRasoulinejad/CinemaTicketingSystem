@model MovieIndexViewModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- 🔍 Search Bar -->
<section class="container my-4">
    <h2 class="text-center mb-4">🔍 Search Movies</h2>
    <div class="mb-3">
        <input type="text" id="searchInput" class="form-control" placeholder="Search for a movie by title, genre, or release date...">
    </div>
</section>

<!-- 🎥 Latest Movies Section -->
<section class="container mb-5">
    <h2 class="text-center mb-4">🎬 Latest Movies</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var movie in Model.LatestMovies)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@movie.Poster" class="card-img-top" alt="@movie.Title Poster" style="height: 250px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">🎭 Genre: @movie.Genre</p>
                        <p class="card-text">⏳ Duration: @movie.Duration min</p>
                        <p class="card-text">📅 Release Date: @movie.ReleaseDate.ToString("yyyy-MM-dd")</p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Details" asp-route-id="@movie.MovieId" class="btn btn-primary btn-sm">View Details</a>
                        <a asp-action="Reservation" asp-route-id="@movie.MovieId" class="btn btn-success btn-sm">Book Now</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- 📊 Movie Table -->
<section class="container my-5">
    <h2 class="text-center mb-4">📊 All Movies</h2>
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover table-bordered align-middle text-center" id="movieTable">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Poster</th>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Duration</th>
                    <th>Release Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model.AllMovies)
                {
                    <tr>
                        <td>@movie.MovieId</td>
                        <td>
                            <img src="@movie.Poster" alt="@movie.Title Poster" class="img-thumbnail" style="width: 80px; height: 120px;">
                        </td>
                        <td>@movie.Title</td>
                        <td>@movie.Genre</td>
                        <td>@movie.Duration min</td>
                        <td>@movie.ReleaseDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@movie.MovieId" class="btn btn-sm btn-primary">View</a>
                            <a asp-action="Edit" asp-route-id="@movie.MovieId" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@movie.MovieId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

<!-- 🔧 JavaScript for Live Search -->
<script>
    document.getElementById('searchInput').addEventListener('keyup', function () {
        let searchQuery = this.value.toLowerCase();
        let rows = document.querySelectorAll('#movieTable tbody tr');

        rows.forEach(row => {
            let title = row.cells[2].textContent.toLowerCase();
            let genre = row.cells[3].textContent.toLowerCase();
            let releaseDate = row.cells[5].textContent.toLowerCase();

            if (title.includes(searchQuery) || genre.includes(searchQuery) || releaseDate.includes(searchQuery)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
</script>

































