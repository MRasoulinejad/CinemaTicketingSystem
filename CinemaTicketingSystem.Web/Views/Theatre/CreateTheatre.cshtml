@model AddTheatreVM
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Add Theatre";
}

<div class="container-custom">
    <h2 class="mb-4 text-center fw-bold">➕ Add New Theatre</h2>

    <!-- 🏢 Theatre Form -->
    <form asp-action="CreateTheatre" method="post" enctype="multipart/form-data">
        <div class="row g-4">
            <!-- 🎭 Theatre Details Section -->
            <div class="col-md-8">
                <div class="card shadow-sm p-4 rounded-4">
                    <h4 class="mb-3 fw-bold">🏢 Theatre Details</h4>

                    <!-- Theatre Name -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">🎬 Theatre Name</label>
                        <input type="text" asp-for="TheatreName" class="form-control" placeholder="e.g., Grand Cinema" required />
                        <span asp-validation-for="TheatreName" class="text-danger"></span>
                    </div>

                    <!-- Location -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">📍 Location</label>
                        <input type="text" asp-for="Location" class="form-control" placeholder="e.g., Downtown Center" required />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">📝 Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Brief description of the theatre"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            @* <!-- 🖼️ Upload Theatre Image Section -->
            <div class="col-md-4">
                <div class="card shadow-sm p-4 rounded-4 text-center">
                    <h4 class="mb-3 fw-bold">🖼️ Upload Image</h4>
                    <div class="mb-3">
                        <label for="TheatreImage" class="form-label">🏞️ Theatre Image</label>
                        <input type="file" asp-for="TheatreImage" id="TheatreImage" class="form-control" accept="image/*" required />
                        <span asp-validation-for="TheatreImage" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <img id="imagePreview" src="https://via.placeholder.com/300x200" alt="Image Preview" class="img-thumbnail mb-2" />
                    </div>
                    <p class="text-muted">Accepted formats: JPG, PNG. Max size: 2MB.</p>
                </div>
            </div> *@

            <!-- 🖼️ Upload Poster Section -->
            <div class="col-md-4">
                <div class="card shadow-sm p-4 rounded text-center">
                    <h4 class="mb-3">🖼️ Upload Image</h4>
                    <div class="mb-3">
                        <label for="TheatreImage" class="form-label">Theatre Image</label>
                        <input type="file" asp-for="TheatreImage" id="TheatreImage" class="form-control" accept="image/*" required />
                    </div>
                    <div class="mb-3">
                        <img id="imagePreview" src="https://via.placeholder.com/300x400" alt="Image Preview" class="img-thumbnail mb-2" />
                    </div>
                    <p class="text-muted">Accepted formats: JPG, PNG. Max size: 2MB.</p>
                </div>
            </div>


        </div>

        <!-- ✅ Submit Button -->
        <div class="row mt-4">
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-success btn-lg px-5">Save Theatre</button>
            </div>
        </div>
    </form>
</div>

<!-- 🛠️ Image Preview Script -->
<script>
    // Preview Theatre Image
    document.getElementById('TheatreImage').addEventListener('change', function (e) {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (event) {
                document.getElementById('imagePreview').src = event.target.result;
            };
            reader.readAsDataURL(file);
        }
    });
</script>
