@{
    Layout = "_Layout";
    ViewData["Title"] = "Password Reset Sent";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 50vh;">
    <div class="card shadow-lg p-4 rounded-4 text-center" style="max-width: 450px; width: 100%;">
        <i class="bi bi-envelope-check text-success display-3 mb-3"></i>
        <h3 class="fw-bold text-primary">Check Your Email 📩</h3>
        <p class="text-muted">
            If an account exists with the email you provided, you will receive a password reset link shortly.
            Please check your inbox and spam folder.
        </p>

        <a asp-controller="Account" asp-action="Login" class="btn btn-primary w-100 fw-bold">
            <i class="bi bi-box-arrow-in-right"></i> Return to Login
        </a>
    </div>
</div>
