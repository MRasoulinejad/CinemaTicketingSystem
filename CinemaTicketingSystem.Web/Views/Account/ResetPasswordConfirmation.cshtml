@{
    Layout = "_Layout";
    ViewData["Title"] = "Password Reset Successful";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 50vh;">
    <div class="card shadow-lg rounded-4 p-4 text-center" style="max-width: 450px; width: 100%;">
        <div class="card-body">
            <h3 class="text-success fw-bold">✅ Password Reset Successful</h3>
            <p class="text-muted">
                Your password has been reset successfully. You can now log in with your new password.
            </p>

            <!-- Login Button -->
            <div class="d-grid">
                <a href="@Url.Action("Login", "Account")" class="btn btn-primary fw-bold">🔑 Go to Login</a>
            </div>

            <div class="text-center mt-3">
                <a href="/" class="text-decoration-none text-primary">🏠 Back to Homepage</a>
            </div>
        </div>
    </div>
</div>
